<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CBE6FD"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
    <TextView
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/logout_profile_title"
        android:text="LOG OUT"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#4964FB"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_marginTop="20dp"
        android:id="@+id/logout_profile_image"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_baseline_person_24_filled"
        android:layout_below="@id/logout_profile_title"
        app:tint="#4964FB" />
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/textView_deleteProduct"
        android:textSize="18sp"
        android:layout_below="@id/logout_profile_image"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:text="Are you sure want to log out ?"
        />


    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="No"
        android:gravity="center"
        android:textColor="#4964FB"
        app:backgroundTint="@color/white"
        android:background="@drawable/social_media_btn"
        android:id="@+id/logout_profile_NO_btn"
        android:layout_below="@+id/textView_deleteProduct"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"

        />
    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Yes"
        android:gravity="center"
        app:backgroundTint="#4964FB"
        android:background="@drawable/social_media_btn"
        android:id="@+id/logout_profile_Yes_btn"
        android:layout_below="@+id/logout_profile_NO_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        />
</RelativeLayout>