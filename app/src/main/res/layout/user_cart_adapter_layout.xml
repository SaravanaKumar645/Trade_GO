<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="11dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:id="@+id/cart_product_relativeLayout_adapter"
        android:elevation="10dp"
        >

        <ImageView
            android:id="@+id/cart_product_image"
            android:layout_width="300dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/no_image_icon"
            android:contentDescription="cart_product_image" />

        <TextView
            android:id="@+id/cart_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/cart_product_image"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:hint="Product Name"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textColorHint="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cart_product_price"
            android:layout_width="wrap_content"
            android:backgroundTint="#FFD600"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:background="@drawable/social_media_btn"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_product_name"
            android:layout_alignEnd="@id/cart_product_remove_btn"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:hint="Product Price"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textColorHint="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cart_product_remove_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_product_price"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/card_bg_1"
            android:backgroundTintMode="multiply"
            android:elevation="10dp"
            android:gravity="center"
            android:text="remove"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:backgroundTint="#C8FD2310"
            app:icon="@drawable/ic_delete_outline"
            app:iconGravity="textStart"

            />


        <View

            android:id="@+id/cart_line_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/cart_product_remove_btn"
            android:background="#777777"

            />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>