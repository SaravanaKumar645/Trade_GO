<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/reset_password_MainLayout"
    tools:context=".activities.RequestPasswordToken">
        <RelativeLayout
            android:id="@+id/reset_password_relativeLayout"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/reset_password_btn"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/pg_bar_backgrorund_2"
            android:elevation="10dp"
            android:padding="14dp"
            android:visibility="gone"
            >

            <ProgressBar
                android:id="@+id/reset_password_pgBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:foregroundGravity="center"
                android:indeterminateTint="#536DFE"
                android:visibility="gone"

                />
        </RelativeLayout>
   <TextView
       android:layout_marginTop="40dp"
       android:layout_width="300dp"
       android:layout_height="wrap_content"
       android:text="REQUEST   TOKEN"
       android:textAlignment="center"
       android:textStyle="bold"
       android:padding="10dp"
       android:background="@drawable/social_media_btn"
       android:backgroundTint="#536DFE"
       android:textSize="23sp"
       android:textColor="@color/white"
       android:layout_centerHorizontal="true"
       android:id="@+id/reset_password_text1"
       />
    <TextView
        android:id="@+id/reset_password_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_below="@id/reset_password_text1"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:maxWidth="320dp"
        android:text="@string/reset_info"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"

        />
    <Button
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/reset_password_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/social_media_btn"
        android:gravity="center"
        android:text="Request Token"
        android:elevation="10dp"
        android:textAlignment="center"
        android:layout_below="@id/reset_password_edittext"
        android:textAllCaps="false"
        app:backgroundTint="#536DFE"

        />
    <EditText
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/request_password_token_editext_bg"
        android:padding="13dp"
        android:id="@+id/reset_password_edittext"
        android:layout_below="@id/reset_password_text2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="17dp"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"

        />
</RelativeLayout>