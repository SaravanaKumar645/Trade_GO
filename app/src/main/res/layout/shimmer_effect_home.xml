<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#E1DCDC"
        android:paddingBottom="10dp">


        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/social_media_btn"
            android:padding="12dp"
            android:backgroundTint="#AEA6A6"
            android:textColor="@color/black" />


    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/horizontal_scroll_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="true"
        android:padding="3dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="3dp">

                <ImageView
                    android:id="@+id/category_base_icon_sh"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#AEA6A6"
                    />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="7dp"
                    android:layout_below="@id/category_base_icon_sh"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:background="#AEA6A6"
                     />
            </RelativeLayout>

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp">

                <ImageView
                    android:id="@+id/category_electronics_icon_sh"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#AEA6A6"
                    />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="7dp"
                    android:background="#AEA6A6"
                    android:layout_below="@id/category_electronics_icon_sh"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    />
            </RelativeLayout>

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp">

                <ImageView
                    android:id="@+id/category_sports_icon_sh"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#AEA6A6"
                    />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="7dp"
                    android:layout_below="@id/category_sports_icon_sh"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:background="#AEA6A6"
                   />
            </RelativeLayout>

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp">

                <ImageView
                    android:id="@+id/category_fashion_icon_sh"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#AEA6A6"
                    />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="7dp"
                    android:layout_below="@id/category_fashion_icon_sh"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                   android:background="#AEA6A6"/>
            </RelativeLayout>

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp">

                <ImageView
                    android:id="@+id/category_furniture_icon_sh"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#AEA6A6"
                    />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="7dp"
                    android:layout_below="@id/category_furniture_icon_sh"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:background="#AEA6A6"/>
            </RelativeLayout>

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp">

                <ImageView
                    android:id="@+id/category_beauty_icon_sh"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#AEA6A6"
                    />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="7dp"
                    android:layout_below="@id/category_beauty_icon_sh"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:background="#AEA6A6"/>
            </RelativeLayout>

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp">

                <ImageView
                    android:id="@+id/category_grocery_icon_sh"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#AEA6A6"
                    />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="7dp"
                    android:layout_below="@id/category_grocery_icon_sh"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:background="#AEA6A6"
                    />
            </RelativeLayout>

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="14dp">

                <ImageView
                    android:id="@+id/category_others_icon_sh"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#AEA6A6"
                     />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="7dp"
                    android:layout_below="@id/category_others_icon_sh"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:background="#AEA6A6"/>
            </RelativeLayout>


        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#AFA5A5" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/home_textview_allProducts_sh"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="9dp"
            android:background="#AEA6A6"
            />

        <View
            android:layout_width="330dp"
            android:layout_height="1dp"
            android:layout_below="@id/home_textview_allProducts_sh"
            android:layout_alignStart="@id/home_textview_allProducts_sh"
            android:layout_marginTop="5dp"
            android:background="#AEA6A6"

            />


    </RelativeLayout>
</LinearLayout>