<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#8AFAE0CD"
    >
    <RelativeLayout
        android:layout_width="320dp"
        android:id="@+id/buyProduct_alertdialog_relativeLayout"
        android:elevation="55dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/welcome_email_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="40dp">

        <TextView
            android:id="@+id/buyProduct_name_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Product name"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"

            />


        <TextView
            android:id="@+id/buyProduct_price_text2"
            android:layout_width="wrap_content"
            android:padding="12dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/buyProduct_name_text1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="product price"
            android:background="@drawable/social_media_btn"
            android:backgroundTint="#FFDADA"
            android:textAlignment="viewStart"
            android:textColor="#FD0707"
            android:textSize="17sp" />

        <com.skydoves.powerspinner.PowerSpinnerView
            android:id="@+id/buyProduct_quantity_dropdownList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buyProduct_price_text2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/social_media_btn"
            android:backgroundTint="#41C5C3C1"
            android:gravity="center"
            android:hint="Qty:"
            android:padding="12dp"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            app:spinner_arrow_tint="@color/black"
            app:spinner_arrow_show="true"
            app:spinner_arrow_animate_duration="200"
            app:spinner_arrow_gravity="start"
            app:spinner_divider_color="#536DFE"
            app:spinner_divider_show="false"
            app:spinner_divider_size="0.4dp"
            app:spinner_popup_animation="dropdown"
            app:spinner_popup_background="@color/white"
            app:spinner_popup_elevation="14dp"
            app:spinner_popup_focusable="true"
            app:spinner_popup_height="200dp"
            app:spinner_popup_width="70dp" />


        <Button
            android:id="@+id/buyProduct_BUY_btn"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_below="@id/buyProduct_quantity_dropdownList"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/social_media_btn"
            android:elevation="20dp"
            android:text="Proceed to Buy"
            android:textAlignment="center"
            android:textStyle="bold"
            app:backgroundTint="#FF6D00" />

        <Button
            android:id="@+id/buyProduct_CANCEL_btn"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_below="@id/buyProduct_BUY_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/social_media_btn"
            android:elevation="20dp"
            android:text="cancel"
            android:textAlignment="center"
            android:textColor="#FF6D00"
            android:textStyle="bold"
            app:backgroundTint="@color/white" />
    </RelativeLayout>

</RelativeLayout>